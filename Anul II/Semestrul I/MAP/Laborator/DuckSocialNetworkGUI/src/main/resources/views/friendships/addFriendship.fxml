<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<GridPane xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="app.controllers.AddFriendshipController"
          hgap="10" vgap="10">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="User A ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <TextField fx:id="txtUserA" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

    <Label text="User B ID:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="txtUserB" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Button text="Save"
            onAction="#onSave"
            GridPane.rowIndex="2" GridPane.columnIndex="0"/>

    <Button text="Cancel"
            onAction="#onCancel"
            GridPane.rowIndex="2" GridPane.columnIndex="1"/>
</GridPane>
